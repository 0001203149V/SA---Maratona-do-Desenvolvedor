programa {
  funcao inicio() {
   inteiro numero_secreto = 42
   inteiro palpite = 0
   escreva("Bem-vindo ao Jogo de Adivinhe o Número!\n")
   escreva("Tente adivinhar o número secreto (entre 1 e 100, para começar).\n\n")
   faca
   {
    escreva("Digite seu palpite: ")
    leia(palpite)
    se (palpite != numero_secreto)
    {
      se (palpite > numero_secreto)
      {
        escreva("Seu palpite (", palpite, ") foi **muito alto**. Tente novamente.\n\n")
      }
      senao 
      {
        escreva("Seu palpite (", palpite, ") foi **muito baixo**. Tente novamente.\n\n")
      }
    }
    } enquanto (palpite != numero_secreto)
    escreva("\n--- PARABÉNS! ---\n")
    escreva("Você acertou! O número secreto era realmente o **", numero_secreto, "**.\n") 
  }
}
